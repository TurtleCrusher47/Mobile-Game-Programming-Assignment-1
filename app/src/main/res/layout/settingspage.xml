<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgnd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        Back Button-->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Back"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <!--        Master Volume-->
        <SeekBar
            android:id="@+id/seekbar_mastervolume"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:thumbTint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="Master Volume"
            android:translationY="-25dp"
            android:textColor="@color/white" />

        <!--        BGM Volume-->

        <SeekBar
            android:id="@+id/seekbar_bgm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:thumbTint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="BGM Volume"
            android:translationY="-25dp"
            android:textColor="@color/white" />

        <!--        SFX Volume-->
        <SeekBar
            android:id="@+id/seekbar_sfx"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:thumbTint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="SFX Volume"
            android:translationY="-25dp"
            android:textColor="@color/white" />

        <!--        Controls Switch-->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/controls_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:theme="@style/Theme.AppCompat"
            android:layout_marginTop="30dp"
            app:thumbTint="@color/black"
            app:trackTint="@color/white"
            app:switchMinWidth="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="Joystick Mode"
            android:translationY="-25dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="580dp"
            android:text="Accelerometer Mode"
            android:translationY="-45dp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>